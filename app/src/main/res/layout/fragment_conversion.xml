<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    android:fillViewport="true"
    tools:context=".ConversionFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:paddingTop="24dp"
        android:paddingBottom="48dp">

        <TextView
            android:id="@+id/tvDecimalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decimal"
            android:textColor="@color/primary"
            android:textSize="15sp"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilDecimal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/tvDecimalLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:hintEnabled="false"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDecimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberSigned|numberDecimal"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvBinaryLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Binary"
            android:textColor="@color/primary"
            android:textSize="15sp"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tilDecimal"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilBinary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/tvBinaryLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:hintEnabled="false"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBinary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvTwosComplementLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Binary (2's Complement)"
            android:textColor="@color/primary"
            android:textSize="15sp"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tilBinary"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilTwosComplement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvTwosComplementLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:hintEnabled="false"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTwosComplement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLength="32"
                android:hint="00000000000000000000000000000000"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvHexLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hexadecimal"
            android:textColor="@color/primary"
            android:textSize="15sp"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tilTwosComplement"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilHex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvHexLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:hintEnabled="false"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etHex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvOctalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Octal"
            android:textColor="@color/primary"
            android:textSize="15sp"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tilHex"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilOctal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvOctalLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:hintEnabled="false"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etOctal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberSigned|number"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvIEEE754Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IEEE 754 (32-bit)"
            android:textColor="@color/primary"
            android:textSize="15sp"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tilOctal"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clIEEE754"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvIEEE754Label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvSignLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:text="Sign (1 bit)"
            android:textColor="@color/text_secondary"
            android:textSize="11sp"
            android:letterSpacing="0.01"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilIEEE754Sign"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                app:hintEnabled="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tilIEEE754Exponent"
                app:layout_constraintTop_toBottomOf="@id/tvSignLabel"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etIEEE754Sign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="1"
                    android:hint="0"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvExponentLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:text="Exponent (8 bits)"
            android:textColor="@color/text_secondary"
            android:textSize="11sp"
            android:letterSpacing="0.01"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@id/tilIEEE754Exponent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilIEEE754Exponent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                app:hintEnabled="false"
                app:layout_constraintStart_toEndOf="@id/tilIEEE754Sign"
                app:layout_constraintEnd_toStartOf="@id/tilIEEE754Mantissa"
                app:layout_constraintTop_toBottomOf="@id/tvExponentLabel"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etIEEE754Exponent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLength="8"
                    android:hint="00000000"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvMantissaLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:text="Mantissa (23 bits)"
            android:textColor="@color/text_secondary"
            android:textSize="11sp"
            android:letterSpacing="0.01"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@id/tilIEEE754Mantissa"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilIEEE754Mantissa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:hintEnabled="false"
                app:layout_constraintStart_toEndOf="@id/tilIEEE754Exponent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvMantissaLabel"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etIEEE754Mantissa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLength="23"
                    android:hint="00000000000000000000000"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary" />
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

